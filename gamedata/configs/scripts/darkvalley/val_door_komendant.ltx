[logic]
active = ph_door@locked_by_story

[ph_door@locked_by_story]
locked = true
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_info = {+gar_story_got_info_from_digger} ph_door@open

[ph_door@locked]
locked = true
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_info = {=smart_captured_by_faction(val_smart_terrain_7_5:freedom) !npc_stay_offline(val_smart_terrain_7_5)} ph_door@close
on_info2 = {+val_find_pda_done} ph_door@close

[ph_door@close]
locked = false
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = ph_door@open
on_info = {-val_find_pda_done !actor_in_zone(val_out_restrictor_comendant) =npc_stay_offline(val_smart_terrain_7_5)} ph_door@locked
on_info2 = {-val_find_pda_done !actor_in_zone(val_out_restrictor_comendant) !smart_captured_by_faction(val_smart_terrain_7_5:freedom)} ph_door@locked

[ph_door@open]
locked = false
closed = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = ph_door@close
on_info = {-val_find_pda_done !actor_in_zone(val_out_restrictor_comendant) =npc_stay_offline(val_smart_terrain_7_5)} ph_door@locked
on_info2 = {-val_find_pda_done !actor_in_zone(val_out_restrictor_comendant) !smart_captured_by_faction(val_smart_terrain_7_5:freedom)} ph_door@locked