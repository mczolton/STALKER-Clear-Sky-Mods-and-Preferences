[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_actor_in_zone = red_forester_restr | ph_door@close %+red_in_forester_door_zone%

[ph_door@close]
locked = false
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_actor_not_in_zone = red_forester_restr | ph_door@locked %-red_in_forester_door_zone%
on_use = ph_door@open

[ph_door@open]
locked = false
closed = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
;on_info = {=actor_out_zone(red_forester_restr)} ph_door@close
on_actor_not_in_zone = red_forester_restr | ph_door@locked %-red_in_forester_door_zone%
on_use = ph_door@close